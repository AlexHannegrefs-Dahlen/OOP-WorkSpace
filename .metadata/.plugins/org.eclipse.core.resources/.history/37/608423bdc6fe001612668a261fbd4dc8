package arcade.frenzy.view.game;

import java.awt.Graphics;
import java.awt.event.ActionListener;
import java.awt.event.KeyListener;

import javax.swing.JPanel;
import javax.swing.Timer;

import arcade.frenzy.model.player.Player;

public abstract class Base_Game extends JPanel
		/* Backgroundpanel */ implements Game_Interface, KeyListener, ActionListener {
	private Player player;

	private Timer timer = new Timer(5, this);
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	public Base_Game() {

	}

	public Base_Game(Player player) {
		this.player = player;
	}

	@Override
	public void paint(Graphics g) {
		super.paint(g);
	}

	@Override
	public boolean detectCollisionObjectInsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (OxLoc + Owidth >= PxLoc)
			return true;
		else
			return false;

	}

	@Override
	public boolean detectCollisionObjectInsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PxLoc + Pwidth >= OxLoc)
			return true;
		else
			return false;
	}

	@Override
	public boolean detectCollisionObjectInsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PyLoc >= OyLoc)
			return true;
		else
			return false;

	}

	@Override
	public boolean detectCollisionObjectInsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PyLoc + Pheight >= OyLoc + Oheight)
			return true;
		else
			return false;
	}

	@Override
	public void detectCollisionObjectOutBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight) {

	}

	@Override
	public void detectCollisionObjectOutTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight) {

	}

	@Override
	public void detectCollisionObjectOutRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight) {

	}

	@Override
	public void detectCollisionObjectOutLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight) {

	}

	/**
	 * @return the player
	 */
	public Player getPlayer() {
		return player;
	}

	/**
	 * @param player
	 *            the player to set
	 */
	public void setPlayer(Player player) {
		this.player = player;
	}

	/**
	 * @return the timer
	 */
	public Timer getTimer() {
		return timer;
	}

	/**
	 * @param timer
	 *            the timer to set
	 */
	public void setTimer(Timer timer) {
		this.timer = timer;
	}

}
