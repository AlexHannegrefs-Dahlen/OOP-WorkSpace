package com.neumont.csc150.airplace;

import java.util.ArrayList;

public class AirPlace {

	public static void main(String[] args) {
		
		//Passengers
		ArrayList<Passengers> Passengers = new ArrayList<>();
		Passengers Passenger1 = new Passengers("Bob", 55);
		Passengers Passenger2 = new Passengers("Fred", 60);
		Passengers Passenger3 = new Passengers("Sue", 35);
		Passengers Passenger4 = new Passengers("Hunter", 20);
		Passengers Passenger5 = new Passengers("Forrest", 23);
		Passengers Passenger6 = new Passengers("Dylan", 13);
		Passengers Passenger7 = new Passengers("Errrrrlin", 18);
		Passengers Passenger8 = new Passengers("Mike", 40);
		Passengers Passenger9 = new Passengers("Rick", 50);
		Passengers Passenger10 = new Passengers ("Parker", 19);
		Passengers.add(Passenger1);
		Passengers.add(Passenger2);
		Passengers.add(Passenger3);
		Passengers.add(Passenger4);
		Passengers.add(Passenger5);
		Passengers.add(Passenger6);
		Passengers.add(Passenger7);
		Passengers.add(Passenger8);
		Passengers.add(Passenger9);
		Passengers.add(Passenger10);
		
		//Pilots
		ArrayList<Pilot> pilots = new ArrayList<>();
		Pilot Pilot1 = new Pilot("Rich", "Captain");
		Pilot Pilot2 = new Pilot("Luke", "Newbie");
		pilots.add(Pilot1);
		pilots.add(Pilot2);
		
		//Planes
		AirPlane Plane1 = new AirPlane("747", 750, 10, pilots, 2, Passengers);
		AirPlane Plane2 = new AirPlane("AirBus", 800, 10, pilots, 4, Passengers);
		
	}

}
