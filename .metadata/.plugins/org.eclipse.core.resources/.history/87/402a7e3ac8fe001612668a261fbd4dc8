package arcade.frenzy.view.game;

public interface Game_Interface {

	boolean detectCollisionPlayerInsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerInsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerInsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerInsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerOutsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerOutsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerOutsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionPlayerOutsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

}
