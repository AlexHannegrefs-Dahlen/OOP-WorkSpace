package arcade.frenzy.controller;

import arcade.frenzy.model.games.Collect_The_Coins;
import arcade.frenzy.model.games.Frenzy_Mode;
import arcade.frenzy.model.games.Frogger;
import arcade.frenzy.model.games.Get_Down;
import arcade.frenzy.model.games.Jump_The_Car;
import arcade.frenzy.model.games.Tree_Climber;
import arcade.frenzy.model.main.menu.Main_Menu;

public class Main_Controller {
	Collect_The_Coins coins;
	Tree_Climber climber;
	Frogger frogger;
	Get_Down down;
	Jump_The_Car carJumper;
	Frenzy_Mode frenzy;
	
	public void start() {
		Main_Menu game = new Main_Menu();
		game.init(this);
	}

	public void handleButtonClicked(ButtonNames buttonClicked) {
		switch (buttonClicked) {
		case Collect_The_Coins:
			coins = new Collect_The_Coins();
			break;
		case Tree_Climber:
			break;
		case Frogger:
			break;
		case Get_Down:
			break;
		case Jump_The_Car:
			break;
		case Frenzy_Mode:
			break;
		default:
			break;
		}
		
	}

}
