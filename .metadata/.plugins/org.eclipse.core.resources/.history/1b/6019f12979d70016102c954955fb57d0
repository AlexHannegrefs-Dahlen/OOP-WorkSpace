package edu.neumont.csc150.myClass;

import java.io.File;
import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Date;

import edu.neumont.csc150.messageinterface.Message;

public class messageMaker implements Message {
	private String sender;
	private String messageDate;
	private String[] recipients = new String[10];
	private File[] attachmentFiles;
	private String subject;
	private String msg;
	private int RecipientsCounter = 0;
	private int attachmentCounter = -1;

	public messageMaker() {

	}

	public messageMaker(String sender, String subject, String msg) {
		this.setSender(sender);
		this.setSubject(subject);
		this.setMessageBody(msg);
		this.createDate();
	}

	private File getAllFiles() {
		return null;
	}

	private String getAllRecipients() {
		String recipient = null;
		for (int i = 0; i < RecipientsCounter; i++) {
			if (i == 0)
				recipient = this.getRecipients()[i];
			else

				recipient += ", " + this.getRecipients()[i];
		}
		return recipient;
	}

	@Override
	public String toString() {
		String email = "Created-Date: " + this.getCreatedDate() + "\nFROM: " + this.getSender() + "\n To: "
				+ this.getAllRecipients() + "\nSubject: " + this.getSubject() + "\nMessage Text: \n"
				+ this.getMessageBody() + "\n\nAttachemts: \n" + this.getAllFiles();
		return email;

	}

	@Override
	public boolean equals(Object obj) {
		messageMaker message = (messageMaker) obj;
		return this.getSender().equals(message.getSender()) && this.getSubject().equals(message.getSubject())
				&& this.getRecipients() == message.getRecipients() && this.msg.equals(message.msg);
	}

	@Override
	public void addRecipient(String recipient) {
		if (this.recipients[this.recipients.length - 1] == null) {
			this.recipients[RecipientsCounter] = recipient;
			RecipientsCounter++;
		} else {
			System.out.println("Can not add anymore recipients");
		}
	}

	@Override
	public void addAttachment(File attachmentFile) {
		if (attachmentFile == null) {

		} else {
			this.attachmentFiles[this.attachmentFiles.length] = attachmentFile;
			attachmentCounter++;
		}
	}

	@Override
	public void setSubject(String subject) {
		this.subject = subject;
	}

	@Override
	public void setMessageBody(String msg) {
		this.msg = msg;
	}

	public void createDate() {
		DateFormat dateFormat = new SimpleDateFormat("yyyy/MM/dd HH:mm:ss");
		Date date = new Date();
		this.messageDate = dateFormat.format(date);
	}

	@Override
	public String getCreatedDate() {
		return this.messageDate;
	}

	public void setSender(String sender) {
		this.sender = sender;
	}

	@Override
	public String getSender() {
		return this.sender;
	}

	@Override
	public String getSubject() {
		return this.subject;
	}

	@Override
	public String getMessageBody() {
		return this.msg;
	}

	@Override
	public String[] getRecipients() {
		return this.recipients;
	}

	@Override
	public File[] getAttachments() {
		return this.attachmentFiles;
	}

}
