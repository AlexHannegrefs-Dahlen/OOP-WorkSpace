package com.hoglezoo.animals;

import java.util.Random;

/**
 * 
 * @author Alex
 *
 */
public class Jungle {
	private String animal;
	private boolean groundDwelling;
	private int IQ;
	private String speak;
	private Random gen = new Random();
	
	/**
	 * 
	 */
	public Jungle(){
		
	}
	
	/**
	 * 
	 * @param groundDwelling
	 * @param IQ
	 * @param speak
	 */
	public Jungle(boolean groundDwelling, int IQ, String speak){
		this.setGroundDwelling(groundDwelling);
		this.setIQ(IQ);
		this.setSpeak(speak);
	}
	
	/**
	 * 
	 * @return
	 */
	public String getAnimal(){
		return this.animal;
	}
	
	/**
	 * 
	 * @param animal
	 */
	public void setAnimal(String animal){
		this.animal = animal;
	}
	/**
	 * 
	 * @param obj
	 */
	public void fight(Object obj){
		Jungle fighting = (Jungle) obj;
		if (gen.nextInt(2) == 1) {
			System.out.println(this.animal + "wins");
		} else
			System.out.println(fighting.animal + "wins");
	}
	
	/**
	 * 
	 * @return
	 */
	public static String getType(){
		return "Jungle";
	}
	
	/**
	 * @return the speak
	 */
	public String getSpeak() {
		return speak;
	}

	/**
	 * @param speak the speak to set
	 */
	public void setSpeak(String speak) {
		this.speak = speak;
	}

	/**
	 * @return the groundDwelling
	 */
	public boolean isGroundDwelling() {
		return groundDwelling;
	}

	/**
	 * @param groundDwelling
	 *            the groundDwelling to set
	 */
	public void setGroundDwelling(boolean groundDwelling) {
		this.groundDwelling = groundDwelling;
	}

	/**
	 * @return the iQ
	 */
	public int getIQ() {
		return IQ;
	}

	/**
	 * @param iQ
	 *            the iQ to set
	 */
	public void setIQ(int iQ) {
		IQ = iQ;
	}
}
