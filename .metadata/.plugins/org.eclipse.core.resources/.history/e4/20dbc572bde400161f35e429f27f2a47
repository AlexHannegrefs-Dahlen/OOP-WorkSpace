import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;

public class HelloWindow{

	public static void main(String[] args) {
		JFrame window = new JFrame("The window booi");
//		window.setSize(800, 600);
		window.setExtendedState(JFrame.MAXIMIZED_BOTH);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		window.setLocation(900, 400);
		
		JPanel mainPanel = new JPanel();
		JButton clickMe = new JButton("Click Me");
		JTextArea textArea = new JTextArea(10, 10);
		
		mainPanel.setBackground(Color.MAGENTA);
		window.getContentPane().add(mainPanel);
		clickMe.addActionListener(new MyClickMeActionListener(textArea));
		mainPanel.add(clickMe);
		mainPanel.add(textArea);
		
		window.setVisible(true);
	}

}

class MyClickMeActionListener implements ActionListener{
	
	private JTextArea areaToUpdate;
	
	public MyClickMeActionListener(JTextArea area){
		this.setAreaToUpdate(area);
	}
	/**
	 * @return the areaToUpdate
	 */
	public JTextArea getAreaToUpdate() {
		return areaToUpdate;
	}

	/**
	 * @param areaToUpdate the areaToUpdate to set
	 */
	public void setAreaToUpdate(JTextArea areaToUpdate) {
		this.areaToUpdate = areaToUpdate;
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(this.getAreaToUpdate() != null){
			this.getAreaToUpdate().append("Clicked\n");
		}
	}
	
}