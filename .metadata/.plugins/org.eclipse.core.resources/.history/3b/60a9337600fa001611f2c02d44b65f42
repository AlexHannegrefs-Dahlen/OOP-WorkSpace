package arcade.frenzy.model.game;

import arcade.frenzy.model.main.menu.Main_Menu;

public class Frenzy_Mode {

	public Frenzy_Mode(Main_Menu game, Collect_The_Coins coins, Tree_Climber climber, Frogger frogger, Get_Down down,
			Jump_The_Car carJumper) throws InterruptedException {
		game.getMainScreen().remove(game.getMainPanel());
		coins = new Collect_The_Coins(game);
		Thread.sleep(100);
		game.getMainScreen().remove(coins);
		climber = new Tree_Climber(game);
		Thread.sleep(100);
		game.getMainScreen().remove(climber);
		frogger = new Frogger(game);
		Thread.sleep(100);
		game.getMainScreen().remove(frogger);
		down = new Get_Down(game);
		Thread.sleep(100);
		game.getMainScreen().remove(down);
		carJumper = new Jump_The_Car(game);
	}

}
