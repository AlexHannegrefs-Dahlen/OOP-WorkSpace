package arcade.frenzy.view.game;

public interface Game_Interface {

	void detectCollisionObjectInsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectInsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectInsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectInsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectOutBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectOutTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectOutRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	void detectCollisionObjectOutLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

}
