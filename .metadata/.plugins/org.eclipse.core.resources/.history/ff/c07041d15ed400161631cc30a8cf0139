package com.hoglezoo.unittest;

import java.util.ArrayList;

import com.hoglezoo.animals.Arctic;
import com.hoglezoo.animals.Jungle;
import com.hoglezoo.animals.ModesOfTravel;
import com.hoglezoo.animals.Ocean;
import com.hoglezoo.animals.Safari;

public class Zoo {

	public static void main(String[] args) {
		Arctic PolarBear = new Arctic(50.5, 50, "Roar");
		Arctic ArcticFox = new Arctic(10, 30, "Growl");
		Arctic Seal = new Arctic(70, 40, "Bark");
		Jungle Monkey = new Jungle(false, 20, "Hehe");
		Jungle Gorilla = new Jungle(false, 25, "Haha");
		Jungle Tiger = new Jungle(true, 40, "Roar");
		Safari Giraffe = new Safari(false, 3, "Pff");
		Safari Lion = new Safari(true, 40, "Roar");
		Ocean Dolphin = new Ocean(false, ModesOfTravel.Fins, "Eeeeek");
		Ocean JellyFish = new Ocean(true, ModesOfTravel.WaveRiding, "None");
		Ocean Squid = new Ocean(true, ModesOfTravel.Propulsion, "Pluh");
		
		ArrayList<Arctic> Arctic = new ArrayList<>();
		Arctic.add(PolarBear);
		Arctic.add(ArcticFox);
		Arctic.add(Seal);
		ArrayList<Jungle> Jungle = new ArrayList<>();
		Jungle.add(Monkey);
		Jungle.add(Gorilla);
		Jungle.add(Tiger);
		ArrayList<Safari> Safari = new ArrayList<>();
		Safari.add(Giraffe);
		Safari.add(Lion);
		ArrayList<Ocean> Ocean = new ArrayList<>();
		Ocean.add(Dolphin);
		Ocean.add(JellyFish);
		Ocean.add(Squid);
		
		for(int i = 0; i < Arctic.size(); i++){
			speak(Arctic.get(i));
		}
	}
	private static void speak(Arctic animal){
		System.out.println(animal + " " + animal.getSpeak());
	}
}