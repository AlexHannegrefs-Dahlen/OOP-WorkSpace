package arcade.frenzy.view.game;

public interface Game_Interface {

	boolean detectCollisionObjectInsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectInsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectInsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectInsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectOutBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectOutTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectOutRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

	boolean detectCollisionObjectOutLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc, int OyLoc,
			int Owidth, int Oheight);

}
