package arcade.frenzy.view.game;

import java.awt.Graphics;
import java.awt.event.ActionListener;
import java.awt.event.KeyListener;

import javax.swing.JPanel;
import javax.swing.Timer;

import arcade.frenzy.model.player.Player;

public abstract class Base_Game extends JPanel
		/* Backgroundpanel */ implements Game_Interface, KeyListener, ActionListener {
	private Player player;

	private Timer timer = new Timer(5, this);
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	public Base_Game() {

	}

	public Base_Game(Player player) {
		this.player = player;
	}

	@Override
	public void paint(Graphics g) {
		super.paint(g);
	}

	@Override
	public boolean detectCollisionPlayerInsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (OxLoc >= PxLoc)
			return true;
		else
			return false;

	}

	@Override
	public boolean detectCollisionPlayerInsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PxLoc + Pwidth >= OxLoc + Owidth)
			return true;
		else
			return false;
	}

	@Override
	public boolean detectCollisionPlayerInsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PyLoc >= OyLoc)
			return true;
		else
			return false;

	}

	@Override
	public boolean detectCollisionPlayerInsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PyLoc + Pheight >= OyLoc + Oheight)
			return true;
		else
			return false;
	}

	@Override
	public boolean detectCollisionPlayerOutsideBottomWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (OyLoc + Oheight >= PyLoc)
			return true;
		else
			return false;
	}

	@Override
	public boolean detectCollisionPlayerOutsideTopWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {
		if (PyLoc + Pheight >= OyLoc)
			return true;
		else
			return false;
	}

	@Override
	public void detectCollisionPlayerOutsideRightWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {

	}

	@Override
	public void detectCollisionPlayerOutsideLeftWall(int PxLoc, int PyLoc, int Pwidth, int Pheight, int OxLoc,
			int OyLoc, int Owidth, int Oheight) {

	}

	/**
	 * @return the player
	 */
	public Player getPlayer() {
		return player;
	}

	/**
	 * @param player
	 *            the player to set
	 */
	public void setPlayer(Player player) {
		this.player = player;
	}

	/**
	 * @return the timer
	 */
	public Timer getTimer() {
		return timer;
	}

	/**
	 * @param timer
	 *            the timer to set
	 */
	public void setTimer(Timer timer) {
		this.timer = timer;
	}

}
