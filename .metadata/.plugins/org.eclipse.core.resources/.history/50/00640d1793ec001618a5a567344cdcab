package tic.tac.toe.view;

import java.awt.GridLayout;

import javax.swing.Icon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

import tic.tac.toe.model.board.Board;

public class GUI {
	private static JFrame frame;
	private static JPanel mainPanel;
	private static JButton squareOne, squareTwo, squareThree, squareFour, squareFive, squareSix, squareSeven,
			squareEight, squareNine;

	public static void initGUI(Board gameBoard) {
		frame = new JFrame("Tic Tac Toe");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setExtendedState(JFrame.NORMAL);
		mainPanel = new JPanel(new GridLayout(0, 3));
		squareOne = new JButton((Icon) gameBoard.getBoardspaces()[0]);
		squareTwo = new JButton((Icon) gameBoard.getBoardspaces()[1]);
		squareThree = new JButton((Icon) gameBoard.getBoardspaces()[2]);
		squareFour = new JButton((Icon) gameBoard.getBoardspaces()[3]);
		squareFive = new JButton((Icon) gameBoard.getBoardspaces()[4]);
		squareSix = new JButton((Icon) gameBoard.getBoardspaces()[5]);
		squareSeven = new JButton((Icon) gameBoard.getBoardspaces()[6]);
		squareEight = new JButton((Icon) gameBoard.getBoardspaces()[7]);
		squareNine = new JButton((Icon) gameBoard.getBoardspaces()[8]);
		mainPanel.add(squareOne);
		mainPanel.add(squareTwo);
		mainPanel.add(squareThree);
		mainPanel.add(squareFour);
		mainPanel.add(squareFive);
		mainPanel.add(squareSix);
		mainPanel.add(squareSeven);
		mainPanel.add(squareEight);
		mainPanel.add(squareNine);
	}
}
