package arcade.frenzy.view.game;

import java.util.ArrayList;

import arcade.frenzy.controller.GameNames;
import arcade.frenzy.controller.Main_Controller;
import arcade.frenzy.view.main.menu.Main_Menu;

public class Frenzy_Mode {
	private ArrayList<GameNames> games = new ArrayList<>[GameNames.Collect_The_Coins, Frogger, Get_Down, Jump_The_Car, Tree_Climber];

	public Frenzy_Mode(Main_Controller main_Controller, Main_Menu game) throws InterruptedException {
		this.playNextGame(main_Controller);
	}

	private void playNextGame(Main_Controller main_Controller) {
		main_Controller.handleButtonClicked(games.get(0));
	}

	public void gameOver(Base_Game gamePlayed) {
		games.remove(0);
		this.playNextGame(gamePlayed.getGame().getCon());
	}

}
