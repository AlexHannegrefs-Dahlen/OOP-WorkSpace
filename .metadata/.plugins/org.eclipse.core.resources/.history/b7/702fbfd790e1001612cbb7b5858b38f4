package tic.tac.toe.model.player;

public abstract class Player {
	public enum XO {
		O, X
	}

	private XO type;
	private boolean turn;

	/**
	 * @return the turn
	 */
	public boolean isTurn() {
		return turn;
	}

	/**
	 * @param turn
	 *            the turn to set
	 */
	public void setTurn(boolean turn) {
		this.turn = turn;
	}

	/**
	 * @return the type
	 */
	public XO getType() {
		return type;
	}

	/**
	 * @param type
	 *            the type to set
	 */
	public void setType(XO type) {
		this.type = type;
	}

}
