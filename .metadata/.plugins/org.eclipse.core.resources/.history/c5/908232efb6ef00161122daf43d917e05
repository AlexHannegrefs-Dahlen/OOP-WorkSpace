import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.JPanel;
import javax.swing.JTextField;

public class KeyList extends JPanel implements KeyListener {
	private static JTextField output;

	public KeyList() {
		output = new JTextField(200);
		this.add(output);
	}

	@Override
	public void keyPressed(KeyEvent arg0) {
		output.setText("Key pressed: " + arg0.getKeyChar());
	}

	@Override
	public void keyReleased(KeyEvent arg0) {
		output.setText("Key released: " + arg0.getKeyChar());
	}

	@Override
	public void keyTyped(KeyEvent arg0) {
		output.setText("Key typed: " + arg0.getKeyChar());
	}

}
