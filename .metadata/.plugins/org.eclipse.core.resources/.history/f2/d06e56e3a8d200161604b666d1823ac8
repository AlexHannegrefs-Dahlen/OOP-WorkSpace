package dahlen.alex.pizza;

import java.util.ArrayList;

public class Pizzeria {

	public static void main(String[] args) {
		ArrayList<String> toppings = new ArrayList<>();
		toppings.add("Pepe");
		toppings.add("Chease");
		Pizza p1 = new Pizza(false, CrustType.DeepDish, toppings);
		ArrayList<String> toppings2 = new ArrayList<>();
		toppings2.add("Chease");
		toppings2.add("Pepe");
		Pizza p2 = new Pizza(false, CrustType.Thin, toppings2);
		
		if(p1.equals(p2)){
			System.out.println("All thee same");
		}else{
			System.out.println("No thee same");
		}
	}

}
