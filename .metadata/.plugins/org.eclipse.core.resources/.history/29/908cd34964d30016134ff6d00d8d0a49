package com.neumont.csc150.airplace;

/**
 * 
 * @author Alex
 *
 */
public class Pilot {
	private String name;
	private String rank;
	
	public Pilot(String name, String rank){
		this.setName(name);
		this.setRank(rank);
	}
	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}
	/**
	 * @param name the name to set
	 */
	public void setName(String name) {
		if(name == null){
			throw new IllegalArgumentException("Name connot be null");
		}
		this.name = name;
	}
	/**
	 * @return the rank
	 */
	public String getRank() {
		return rank;
	}
	/**
	 * @param rank the rank to set
	 */
	public void setRank(String rank) {
		if(name == null){
			throw new IllegalArgumentException("rank cannot be null");1
		}
		this.rank = rank;
	}
}
