package pong.model;

import pong.view.Drawing;

public class PongCourt {

	public int Score() {
		return 0;
	}

	public boolean Win() {
		return false;
	}

	public void DetectBallWallCollision(int panelWidth, int panelHeight) {
		if (Drawing.getBall().getY() >= panelHeight - Drawing.getBall().getHeight()) {
			Drawing.getBall().setyVel(-Drawing.getBall().getyVel());
		} else if (Drawing.getBall().getY() <= 0) {
			Drawing.getBall().setyVel(-Drawing.getBall().getyVel());
		}
		if (Drawing.getBall().getX() + Drawing.getBall().getWidth() >= panelWidth) {
			Drawing.getLeft().setScore(Drawing.getLeft().getScore() + 1);
			Drawing.getBall().resetBall();
		} else if (Drawing.getBall().getX() <= 0) {
			Drawing.getRight().setScore(Drawing.getRight().getScore() + 1);
			Drawing.getBall().resetBall();
		}
	}

	public void DetectBallPaddleCollision() {
		if (Drawing.getRight().getX() - Drawing.getBall().getX() <= Drawing.getBall().getWidth()
				&& Drawing.getBall().getX() + Drawing.getBall().getWidth() <= Drawing.getRight().getX()
						+ Drawing.getRight().getWidth()) {
			if (Drawing.getBall().getY() > Drawing.getRight().getY()
					&& Drawing.getBall().getY() < Drawing.getRight().getY() + Drawing.getRight().getHeight()
							- Drawing.getBall().getHeight()) {
				Drawing.getBall().setxVel(-Drawing.getBall().getxVel());
			}
		} else if (Drawing.getLeft().getX() <= Drawing.getBall().getX()
				&& Drawing.getLeft().getX() + Drawing.getLeft().getWidth() > Drawing.getBall().getX()) {
			if (Drawing.getBall().getY() > Drawing.getLeft().getY()
					&& Drawing.getBall().getY() <= Drawing.getLeft().getY() + Drawing.getLeft().getHeight()
							- Drawing.getBall().getHeight()) {
				Drawing.getBall().setxVel(-Drawing.getBall().getxVel());
			}
		}
	}
}
